<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/fragment_payment_phone_number_text1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/dimen_8dp"
         android:fontFamily="@font/cairo_bold"
         android:layout_marginTop="@dimen/dimen_23dp"
         android:gravity="center"
         android:text="@string/fragment_payment_phone_number_text1"
         android:textColor="#707070"
         android:textSize="@dimen/dimen_14sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/fragment_payment_phone_number_text2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/dimen_8dp"
         android:fontFamily="@font/cairo_bold"
         android:layout_marginTop="@dimen/dimen_12dp"
         android:gravity="center"
         android:text="@string/fragment_payment_phone_number_text2"
         android:textColor="#AAAAAA"
         android:textSize="@dimen/dimen_14sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/fragment_payment_phone_number_text1" />

     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/fragment_payment_phone_number_text3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/dimen_8dp"
         android:fontFamily="@font/cairo_bold"
         android:layout_marginTop="@dimen/dimen_12dp"
         android:gravity="center"
         android:text="@string/fragment_payment_phone_number_text3"
         android:textColor="#AAAAAA"
         android:textSize="@dimen/dimen_14sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/fragment_payment_phone_number_text2"/>

     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/fragment_payment_phone_number_text4"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/dimen_8dp"
         android:layout_marginTop="@dimen/dimen_12dp"
         android:fontFamily="@font/cairo_bold"
         android:gravity="center"
         android:text="+966-59-5390323"
         android:textColor="#AAAAAA"
         android:textSize="@dimen/dimen_14sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/fragment_payment_phone_number_text3"/>

     <androidx.appcompat.widget.AppCompatEditText
         android:id="@+id/fragment_payment_phone_number_edittext"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginEnd="@dimen/dimen_52dp"
         android:layout_marginStart="@dimen/dimen_52dp"
         android:layout_marginTop="@dimen/dimen_42dp"
         android:textSize="@dimen/dimen_20sp"
         android:inputType="number"
         android:maxLength="4"
         android:fontFamily="@font/cairo_bold"
         android:textColorHint="#AAAAAA"
         android:hint="0000"
         android:letterSpacing="2"
         android:gravity="center"
         android:textColor="#707070"
         app:layout_constraintTop_toBottomOf="@+id/fragment_payment_phone_number_text4"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>


     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/fragment_payment_phone_number_text5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/dimen_16dp"
         android:fontFamily="@font/cairo_bold"
         android:gravity="center"
         android:layout_marginStart="@dimen/dimen_16dp"
         android:text="@string/fragment_payment_phone_number_text5_label"
         android:textColor="#AAAAAA"
         android:textSize="@dimen/dimen_14sp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintBottom_toTopOf="@+id/fragment_payment_phone_number_btn_sure"/>
     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/fragment_payment_phone_number_text_change"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginBottom="@dimen/dimen_16dp"
         android:fontFamily="@font/cairo_bold"
         android:gravity="center"
         android:layout_marginEnd="@dimen/dimen_16dp"
         android:text="@string/fragment_payment_phone_number_text_change"
         android:textColor="#41A8E5"
         android:textSize="@dimen/dimen_14sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@+id/fragment_payment_phone_number_btn_sure"/>
     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/fragment_payment_phone_number_btn_sure"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#047AC0"
         android:fontFamily="@font/cairo_bold"
         android:gravity="center"
         android:paddingTop="@dimen/dimen_10dp"
         android:paddingBottom="@dimen/dimen_10dp"
         android:text="@string/fragment_payment_phone_number_btn_sure"
         android:textColor="#FFFFFF"
         android:textSize="@dimen/dimen_14sp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>