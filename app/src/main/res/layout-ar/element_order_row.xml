<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/dimen_20dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/order_element_img"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/order_element_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:textSize="@dimen/dimen_10sp"
        android:fontFamily="@font/cairo_bold"

        app:layout_constraintStart_toEndOf="@id/order_element_img"

        app:layout_constraintTop_toTopOf="@id/order_element_img"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/order_element_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_30dp"
        android:fontFamily="@font/cairo_bold"
        android:textAlignment="viewStart"
        android:textColor="#232222"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/order_element_name"
        app:layout_constraintTop_toBottomOf="@+id/order_element_name" />

     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/order_element_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_bold"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:textColor="#232222"
        android:textSize="@dimen/dimen_18sp"
        app:layout_constraintStart_toStartOf="@+id/order_element_desc"
        app:layout_constraintTop_toBottomOf="@+id/order_element_desc" />

     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/order_element_currency_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:fontFamily="@font/cairo_bold"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:text="@string/currancy_label"
        android:textColor="#232222"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/order_element_price"
        app:layout_constraintStart_toEndOf="@+id/order_element_price"
        app:layout_constraintTop_toTopOf="@+id/order_element_price" />

     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/order_element_currency_price_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:fontFamily="@font/cairo_bold"
        android:paddingTop="@dimen/dimen_2dp"
         android:visibility="gone"
        android:paddingBottom="@dimen/dimen_2dp"
        android:text="190.00"
        android:textColor="#AAAAAA"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintStart_toEndOf="@+id/order_element_currency_price"
        app:layout_constraintTop_toTopOf="@+id/order_element_currency_price" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:visibility="gone"
        android:background="#AAAAAA"
        app:layout_constraintBottom_toBottomOf="@+id/order_element_currency_price_before"
        app:layout_constraintEnd_toEndOf="@+id/order_element_currency_price_before"
        app:layout_constraintStart_toStartOf="@+id/order_element_currency_price_before"
        app:layout_constraintTop_toTopOf="@+id/order_element_currency_price_before" />

     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/order_element_currency_before_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_3dp"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/currancy_label"
         android:visibility="gone"
        android:textColor="#AAAAAA"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/order_element_currency_price_before"
        app:layout_constraintStart_toEndOf="@+id/order_element_currency_price_before"
        app:layout_constraintTop_toTopOf="@+id/order_element_currency_price_before" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/dimen_1dp"
        android:visibility="gone"
        android:background="#AAAAAA"
        app:layout_constraintBottom_toBottomOf="@+id/order_element_currency_before_label"
        app:layout_constraintEnd_toEndOf="@+id/order_element_currency_before_label"
        app:layout_constraintStart_toStartOf="@+id/order_element_currency_before_label"
        app:layout_constraintTop_toTopOf="@+id/order_element_currency_before_label" />

     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/order_element_currency_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="#606060"
        android:text="@string/order_element_currency_arrow"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintTop_toBottomOf="@+id/order_element_price"
        app:layout_constraintStart_toStartOf="@+id/order_element_price"/>

     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/order_element_currency_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="#606060"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintTop_toTopOf="@+id/order_element_currency_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/order_element_currency_arrow"
        app:layout_constraintStart_toEndOf="@+id/order_element_currency_arrow"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/order_element_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="#5B8052"
        android:layout_marginEnd="@dimen/dimen_30dp"

        android:fontFamily="@font/cairo_bold"
        app:layout_constraintTop_toTopOf="@+id/order_element_currency_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/order_element_currency_arrow"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>