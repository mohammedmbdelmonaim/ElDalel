<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fragment_account_header_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#219FE9"
        android:orientation="horizontal">

         <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginStart="@dimen/dimen_18dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center_vertical|start"
            android:text="@string/fragment_account_label"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dimen_20dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/fragment_account_after_login_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fragment_account_after_login_profile_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fragment_account_after_login_profile_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_avatar_account" />

                     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                        android:id="@+id/fragment_account_after_login_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/ragment_account_after_login_profile_text"
                        android:textColor="#606060"
                        android:textSize="@dimen/dimen_10sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fragment_account_after_login_orders_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fragment_account_after_login_orders_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_list" />

                    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                        android:id="@+id/fragment_account_after_login_orders_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/shipments_label"
                        android:textColor="#606060"
                        android:textSize="@dimen/dimen_10sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fragment_account_after_login_likes_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fragment_account_after_login_likes_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_heart_profile" />

                     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                        android:id="@+id/fragment_account_after_login_likes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/fragment_account_after_login_likes_text"
                        android:textColor="#606060"
                        android:textSize="@dimen/dimen_10sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fragment_account_after_login_wallet_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fragment_account_after_login_wallet_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_wallet" />

                     <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                        android:id="@+id/fragment_account_after_login_wallet_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:fontFamily="@font/cairo_bold"
                        android:text="@string/fragment_account_after_login_wallet_text"
                        android:textColor="#606060"
                        android:textSize="@dimen/dimen_10sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/fragment_account_after_login_account_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_account_notclicked"
                android:elevation="@dimen/dimen_4dp"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_18dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_account_after_login_linear">

                 <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/fragment_account_after_login_account_label"
                    android:textColor="#AAAAAA"
                    android:textSize="@dimen/dimen_12sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/fragment_account_after_login_addresses_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_account"
                android:elevation="@dimen/dimen_4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_18dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_account_after_login_account_label">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_flag" />

                 <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/fragment_account_after_login_addresses_linear"
                    android:textColor="#606060"
                    android:textSize="@dimen/dimen_12sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_expand_more" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ragment_account_after_login_pay_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_account"
                android:elevation="@dimen/dimen_4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_18dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_account_after_login_addresses_linear">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_maps_and_flags" />

                 <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/ragment_account_after_login_pay_label"
                    android:textColor="#606060"
                    android:textSize="@dimen/dimen_12sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_expand_more" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ragment_account_after_login_return_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_account"
                android:elevation="@dimen/dimen_4dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_18dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ragment_account_after_login_pay_linear">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_back_arrow" />

                 <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_bold"

                    android:text="@string/ragment_account_after_login_return_label"
                    android:textColor="#606060"
                    android:textSize="@dimen/dimen_12sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_expand_more" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ragment_account_after_login_logout_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_account"
                android:elevation="@dimen/dimen_4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_18dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ragment_account_after_login_return_linear">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logout" />

             <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_bold"

                android:text="@string/ragment_account_after_login_logout_label"
                android:textColor="#606060"
                android:textSize="@dimen/dimen_12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_expand_more" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/fragment_account_after_login_getHelers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ragment_account_after_login_logout_linear">

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>