<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ColorProduct when the row is selected -->
    <item android:state_pressed="false" android:state_selected="true" >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <padding android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp"/>
            <stroke android:color="#047AC0" android:width="2dp"/>
        </shape>
    </item>
    <!-- Standard background color -->
    <item android:state_pressed="false" android:state_selected="false" >
        <shape android:shape="rectangle">
        <solid android:color="#FFFFFF" />

        <padding android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp"/>

        <stroke android:color="#EEEEEE" android:width="2dp"/>
        </shape>
    </item>
</selector>
