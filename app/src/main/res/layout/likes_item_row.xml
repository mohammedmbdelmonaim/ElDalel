<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dimen_5dp"
    app:cardElevation="@dimen/dimen_4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/like_item_image_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_delete" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/like_item_img_url"
            android:layout_width="@dimen/dimen_126dp"
            android:layout_height="@dimen/dimen_126dp"
            android:scaleType="fitXY"
            android:src="@drawable/harddisk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/like_item_image_delete"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/discount_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/row_dicount_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/like_item_image_delete">

            <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                android:id="@+id/discount_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/discount_phone_txt"
                android:textSize="@dimen/dimen_10sp"/>

            <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                android:id="@+id/like_item_discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_bold"
                tools:text="10"
                android:textSize="@dimen/dimen_10sp"/>

            <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_bold"
                android:text="%"
                android:textSize="@dimen/dimen_10sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/like_item_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:fontFamily="@font/cairo_bold"
            android:text="زندور"
            android:textAlignment="viewStart"

            android:layout_marginStart="@dimen/dimen_6dp"
            android:textColor="#AAAAAA"
            android:textSize="@dimen/dimen_10sp"
            app:layout_constraintStart_toStartOf="@+id/like_item_image_delete"
            app:layout_constraintTop_toBottomOf="@+id/like_item_img_url" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/like_item_text_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:fontFamily="@font/cairo_bold"
            android:text="شاحن بنك طاقة متنقل مدخل تايب سى"
            android:textAlignment="viewStart"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:layout_marginStart="@dimen/dimen_6dp"
            android:textColor="#232222"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/like_item_image_delete"
            app:layout_constraintTop_toBottomOf="@+id/like_item_text_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/like_item_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:text="177.45"

            android:layout_marginStart="@dimen/dimen_6dp"
            android:textAlignment="viewStart"
            android:textColor="#232222"
            android:textSize="@dimen/dimen_18sp"
            app:layout_constraintStart_toStartOf="@+id/like_item_image_delete"
            app:layout_constraintTop_toBottomOf="@+id/like_item_text_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:fontFamily="@font/cairo_bold"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:text="@string/currancy_label"
            android:textAlignment="viewStart"
            android:textColor="#232222"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintBottom_toBottomOf="@+id/like_item_text_price"
            app:layout_constraintStart_toEndOf="@+id/like_item_text_price"
            app:layout_constraintTop_toTopOf="@+id/like_item_text_price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/like_item_text_price_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:fontFamily="@font/cairo_bold"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:text="190.00"
            android:textAlignment="viewStart"
            android:textColor="#AAAAAA"
            android:textSize="@dimen/dimen_10sp"
            app:layout_constraintStart_toStartOf="@+id/like_item_text_price"
            app:layout_constraintTop_toBottomOf="@+id/like_item_text_price" />

        <View
            android:id="@+id/like_item_price_before_label"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:background="#AAAAAA"
            app:layout_constraintBottom_toBottomOf="@+id/like_item_text_price_before"
            app:layout_constraintEnd_toEndOf="@+id/like_item_text_price_before"
            app:layout_constraintStart_toStartOf="@+id/like_item_text_price_before"
            app:layout_constraintTop_toTopOf="@+id/like_item_text_price_before" />

        <!--<androidx.appcompat.widget.AppCompatTextView-->
        <!--android:id="@+id/like_item_text_price_before_label"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="@dimen/dimen_3dp"-->
        <!--android:fontFamily="@font/cairo_bold"-->
        <!--android:text="@string/currancy_label"-->
        <!--android:textAlignment="viewStart"-->
        <!--android:textColor="#AAAAAA"-->
        <!--android:textSize="@dimen/dimen_10sp"-->
        <!--app:layout_constraintBottom_toBottomOf="@+id/like_item_text_price_before"-->
        <!--app:layout_constraintStart_toEndOf="@+id/like_item_text_price_before"-->
        <!--app:layout_constraintTop_toTopOf="@+id/like_item_text_price_before" />-->

        <!--<View-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0.8dp"-->
        <!--android:layout_marginTop="@dimen/dimen_1dp"-->
        <!--android:background="#AAAAAA"-->
        <!--app:layout_constraintBottom_toBottomOf="@+id/like_item_text_price_before_label"-->
        <!--app:layout_constraintEnd_toEndOf="@+id/like_item_text_price_before_label"-->
        <!--app:layout_constraintStart_toStartOf="@+id/like_item_text_price_before_label"-->
        <!--app:layout_constraintTop_toTopOf="@+id/like_item_text_price_before_label" />-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/like_item_text_add_to_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/row_add_to_car_bg"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center"
            android:text="@string/like_item_text_add_to_card"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/like_item_text_price_before" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>