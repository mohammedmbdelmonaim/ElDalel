                <!--<androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"-->
                <!--android:id="@+id/filter_colors_text"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
