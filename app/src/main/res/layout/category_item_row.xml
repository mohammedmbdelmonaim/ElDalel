<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/category_item_img_url"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/harddisk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/category_item_image_like"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/category_item_image_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/state_of_like_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_item_discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/row_dicount_bg"
            android:fontFamily="@font/cairo_bold"
            android:text="خصم ١٠٪"
            android:textAlignment="viewStart"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/category_item_image_like" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_item_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cairo_bold"
            android:text="زندور"
            android:textAlignment="viewStart"
            android:textColor="#AAAAAA"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/category_item_image_like"
            app:layout_constraintTop_toBottomOf="@+id/category_item_img_url" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_item_text_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:fontFamily="@font/cairo_bold"
            android:text="شاحن بنك طاقة متنقل مدخل تايب سى"
            android:textAlignment="viewStart"
            android:textColor="#232222"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/category_item_image_like"
            app:layout_constraintTop_toBottomOf="@+id/category_item_text_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_item_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="177.45"
            android:textAlignment="viewStart"
            android:textColor="#232222"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/category_item_image_like"
            app:layout_constraintTop_toBottomOf="@+id/category_item_text_name" />

        <!--<androidx.appcompat.widget.AppCompatTextView-->
