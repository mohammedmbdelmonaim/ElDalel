        <!--app:layout_constraintTop_toTopOf="@+id/category_item_text_price" />-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_item_text_price_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/cairo_bold"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="190.00"
            android:textAlignment="viewStart"
            android:textColor="#AAAAAA"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/category_item_text_add_to_card"
            app:layout_constraintStart_toStartOf="@+id/category_item_text_price"
            app:layout_constraintTop_toBottomOf="@+id/category_item_text_price" />

        <View
            android:id="@+id/discount_label"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:background="#AAAAAA"
            app:layout_constraintBottom_toBottomOf="@+id/category_item_text_price_before"
            app:layout_constraintEnd_toEndOf="@+id/category_item_text_price_before"
            app:layout_constraintStart_toStartOf="@+id/category_item_text_price_before"
            app:layout_constraintTop_toTopOf="@+id/category_item_text_price_before" />

