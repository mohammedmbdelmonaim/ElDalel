<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/congrate_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_checked_congrate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/congrate_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#707070"
        android:text="تهانينا"
        android:textSize="24sp"
        android:fontFamily="@font/cairo_bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/congrate_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/congrate_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#707070"
        android:text="تم الموافقة على طلبك"
        android:textSize="24sp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintTop_toBottomOf="@+id/congrate_text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/congrate_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:text="سوف نرسل لك إخطار عندما يتم تسليم البضائع"
        android:textSize="12sp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintTop_toBottomOf="@+id/congrate_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>