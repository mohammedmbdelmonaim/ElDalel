<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/dimen_20dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/activity_wallet_header_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#219FE9"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_wallet_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_20dp"
            app:srcCompat="@drawable/ic_arrow_back" />

        <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
            android:id="@+id/activity_wallet_header_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginStart="@dimen/dimen_22dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center_vertical|start"
            android:text="@string/fragment_account_after_login_wallet_text"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".WalletActivity">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_operations_wallet_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activity_operations_wallet_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_15sp"
                android:layout_gravity="center"
                android:text="@string/activity_operations_wallet_total_label"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:fontFamily="@font/cairo_bold"
                android:layout_marginTop="@dimen/dimen_40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_operations_wallet_recycler" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activity_operations_wallet_total_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_15sp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:fontFamily="@font/cairo_bold"
                app:layout_constraintTop_toBottomOf="@+id/activity_operations_wallet_recycler"
                app:layout_constraintStart_toEndOf="@+id/activity_operations_wallet_total_label"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/activity_operations_wallet_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_15sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:text="@string/no_wallet"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:fontFamily="@font/cairo_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>