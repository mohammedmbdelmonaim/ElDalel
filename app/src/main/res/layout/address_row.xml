<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_row_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp"
    android:paddingStart="16dp"
    android:paddingTop="25dp"
    android:background="@drawable/row_detail_change_color"
    android:paddingEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/maps_payment_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_maps_payment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/unchecked_payment_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_unchecked_payment"
        app:layout_constraintTop_toTopOf="@+id/maps_payment_img"
        app:layout_constraintBottom_toBottomOf="@id/maps_payment_img"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/name_payment_addresses_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:text="@string/name_payment_addresses_text"
        android:layout_marginStart="11dp"
        android:textSize="12sp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintStart_toEndOf="@id/maps_payment_img"
        app:layout_constraintTop_toTopOf="@id/maps_payment_img"
        app:layout_constraintBottom_toBottomOf="@id/maps_payment_img"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/name_payment_addresses_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:layout_marginStart="11dp"
        android:textSize="12sp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintStart_toEndOf="@id/name_payment_addresses_text"
        app:layout_constraintTop_toTopOf="@id/maps_payment_img"
        app:layout_constraintBottom_toBottomOf="@id/maps_payment_img"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/address_payment_addresses_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:text="@string/address_payment_addresses_text"
        android:layout_marginStart="11dp"
        android:textSize="12sp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintStart_toEndOf="@id/maps_payment_img"
        app:layout_constraintTop_toBottomOf="@+id/name_payment_addresses_text"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/address_payment_addresses_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:layout_marginStart="11dp"
        android:textSize="12sp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintStart_toEndOf="@id/address_payment_addresses_text"
        app:layout_constraintTop_toBottomOf="@+id/name_payment_addresses_text"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/mobile_payment_addresses_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:text="@string/mobile_payment_addresses_text"
        android:layout_marginStart="11dp"
        android:textSize="12sp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintStart_toEndOf="@id/maps_payment_img"
        app:layout_constraintTop_toBottomOf="@+id/address_payment_addresses_textView"/>

    <androidx.appcompat.widget.AppCompatTextView android:textAlignment="viewStart"
        android:id="@+id/mobile_payment_addresses_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:layout_marginStart="11dp"
        android:textSize="12sp"
        android:fontFamily="@font/cairo_bold"
        app:layout_constraintStart_toEndOf="@id/mobile_payment_addresses_text"
        app:layout_constraintTop_toBottomOf="@+id/address_payment_addresses_textView"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/delete_payment_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete_payment"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_payment_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_edit_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delete_payment_img"/>
</androidx.constraintlayout.widget.ConstraintLayout>