<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context=".ui.salesmanShipment.SalesmanCancelOrderFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/notes_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/note_title"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/cancel_order_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/cancel_order_reasons"
                android:gravity="start"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_16dp" />
            <!--            <EditText-->
            <!--                android:id="@+id/cancel_order_notes_et"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="@android:color/transparent"-->
            <!--                android:inputType="textCapSentences|textMultiLine"-->
            <!--                android:gravity="start"-->
            <!--                android:padding="@dimen/dimen_16dp" />-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/cancel_order_submit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:background="@drawable/dialog_cancel_background"
        android:text="@string/cancel_order_label"
        android:textColor="@color/white_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notes_card" />

</androidx.constraintlayout.widget.ConstraintLayout>