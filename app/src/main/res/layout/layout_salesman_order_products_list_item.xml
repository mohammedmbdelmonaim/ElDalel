<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dimen_20dp"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_marginEnd="@dimen/dimen_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/order_id_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/order_id_text"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_id_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp16"
            app:layout_constraintBaseline_toBaselineOf="@id/order_id_title_tv"
            app:layout_constraintStart_toEndOf="@id/order_id_title_tv"
            tools:text="(87)" />

        <ImageView
            android:id="@+id/order_product_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_id_title_tv"
            tools:src="@drawable/harddisk" />

        <TextView
            android:id="@+id/order_product_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="@font/cairo_bold"
            android:textColor="#232222"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/order_product_iv"
            app:layout_constraintTop_toBottomOf="@id/order_id_title_tv"
            tools:text="Huawei nova i7, 128 gb, 4gb ram" />

        <TextView
            android:id="@+id/order_product_quantity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#232222"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintStart_toStartOf="@id/order_product_name_tv"
            app:layout_constraintTop_toBottomOf="@id/order_product_name_tv"
            tools:text="2" />

        <TextView
            android:id="@+id/order_product_amount_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_2dp"
            android:textColor="#232222"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintStart_toEndOf="@id/order_product_quantity_tv"
            app:layout_constraintTop_toBottomOf="@id/order_product_name_tv"
            android:text="X" />

        <TextView
            android:id="@+id/order_product_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_2dp"
            android:textColor="#232222"
            android:textSize="@dimen/dimen_16sp"

            android:layout_marginTop="@dimen/dimen_6dp"
            app:layout_constraintStart_toEndOf="@id/order_product_amount_x"
            app:layout_constraintTop_toBottomOf="@id/order_product_name_tv"
            tools:text="1888.50 SAR" />

        <TextView
            android:id="@+id/order_product_total_price_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:textColor="#232222"
            app:layout_constraintStart_toStartOf="@id/order_product_name_tv"
            app:layout_constraintTop_toBottomOf="@id/order_product_quantity_tv"
            android:text="@string/total_price_include_tax_title" />

        <TextView
            android:id="@+id/order_product_total_price_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_2dp"
            android:textColor="#232222"
            app:layout_constraintBaseline_toBaselineOf="@id/order_product_total_price_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/order_product_total_price_title_tv"
            tools:text="3655.00 SAR" />

        <TextView
            android:id="@+id/order_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:textColor="#232222"
            app:layout_constraintStart_toStartOf="@id/order_product_name_tv"
            app:layout_constraintTop_toBottomOf="@id/order_product_total_price_title_tv"
            tools:text="12/8/2019 02:08 PM" />

        <ImageButton
            android:id="@+id/deliver_accept_button"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/salesman_accept_button_background"
            android:padding="@dimen/dimen_2dp"
            app:layout_constraintEnd_toStartOf="@id/deliver_edit_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_date_tv"
            app:srcCompat="@drawable/ic_check_24dp" />

        <ImageButton
            android:id="@+id/deliver_edit_button"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="30dp"
            android:background="@drawable/salesman_edit_button_background"
            android:padding="@dimen/dimen_2dp"
            app:layout_constraintEnd_toStartOf="@id/deliver_decline_buton"
            app:layout_constraintStart_toEndOf="@id/deliver_accept_button"
            app:layout_constraintTop_toTopOf="@id/deliver_accept_button"
            app:srcCompat="@drawable/ic_edit_24dp" />

        <ImageButton
            android:id="@+id/deliver_decline_buton"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="30dp"
            android:background="@drawable/salesman_delete_button_background"
            android:padding="@dimen/dimen_2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/deliver_edit_button"
            app:layout_constraintTop_toTopOf="@id/deliver_accept_button"
            app:srcCompat="@drawable/ic_delete_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>