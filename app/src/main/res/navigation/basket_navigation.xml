<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basket_navigation"
    app:startDestination="@id/basketFragment">

    <fragment
        android:id="@+id/basketFragment"
        android:name="com.zeidex.eldalel.BasketFragment"
        android:label="fragment_basket"
        tools:layout="@layout/fragment_basket" >
        <action
            android:id="@+id/action_basketFragment_to_detailItemActivity"
            app:destination="@+id/detailItemActivity" />
    </fragment>
    <fragment
        android:id="@+id/detailItemActivity"
        android:name="com.zeidex.eldalel.DetailItemFragment"
        android:label="activity_detail_item"
        tools:layout="@layout/reload_layout">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="pos"
            app:argType="integer" />
        <argument
            android:name="similar_products"
            app:argType="com.zeidex.eldalel.models.ProductsCategory[]"
            app:nullable="true" />
        <argument
            android:name="getLike"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>